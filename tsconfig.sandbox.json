{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "baseUrl": "./src",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "composite": true,
    "paths": {
      "$aero_config": ["./src/config.ts"],
      "$aero_shared": ["shared/*"],
      "$aero_browser": ["browser/*"]
    }
  },
  "include": ["src/sandbox/**/*.ts", "./src/config.ts"]
}
